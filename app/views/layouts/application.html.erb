  <div class="container">
    <!-- chat -->
    
    <div class="col-md-3" style="background: #F6F8FA">
      <% if current_user %>
      <div class="row" style="margin-left:10px; margin-top: 10px">
      <%= image_tag(current_user.avatar, class: "avatarlist") %>
      <br>
      <h4 style="font-size: 14px; margin-top:-6px; line-height: 0.9"><%= current_user.name %><br> <%= link_to 'Editar Perfil' , edit_user_registration_path, class: "edit_avatar", style: "font-size: 11px; padding-top: -9px" %></h4>
    </div>
    <hr style="margin-top:5px;margin-bottom:10px;">
            <h4 style="font-size: 13px; margin-left: 10px; margin-bottom: 8px; color: green;"><strong>PROJETOS</strong></h4>
      <div class="online" style="margin-top: 0px; background: #F6F8FA">
        <% current_user.projects.order(name: :asc).each do |project| %>
        <% if Member.where(project_id: project.id, user_id: current_user.id).first.situation == 1 %>
        <%= link_to project do %>
        <div class="online-top elem_list" style=" margin-left: 10px;padding: 1px; padding-top: 3px; padding-bottom: 3px ">
          <div class="">
            <%= image_tag(project.avatar, class: "projectlist") %>
          </div>
          <div class="top-on" >
            <div class="top-on1" style="margin-left: -35px; margin-top:-5px; font-size: 13px; color: #000">
              <%= project.name %>
            </div>
            <div class="clearfix"> </div>
          </div>
          <div class="clearfix"> </div>
        </div>
        <% end %>
        <%end%>
        <% end %>     
        <% current_user.projects.order(name: :desc).each do |project| %>
        <% if Member.where(project_id: project.id, user_id: current_user.id).first.situation == 2 %>
        <%= link_to project do %>
        <div class="online-top elem_list" style=" margin-left: 10px;padding: 1px; padding-bottom: 2px ">
          <div class="">
            <%= image_tag(project.avatar, class: "projectlist") %>
          </div>
          <div class="top-on" >
            <div class="top-on1" style="margin-left: -37px; margin-top:-5px">
              <p><%= project.name %></p>
            </div>
            <div class="clearfix"> </div>
          </div>
          <div class="clearfix"> </div>
        </div>
        <% end %>
        <%end%>
        <% end %>  
        <hr style="margin-bottom: 5px; margin-top: 5px">
        <%= link_to new_project_path, method: :get, style: "color:#000" do %>
        <div class="online-top elem_list" style=" margin-left: 12px;padding: 1px; padding-bottom: 2px; padding-top: 3px; ">
          <div class="glyphicon glyphicon-plus-sign" style="font-size: 20px; ">
            
          </div>
          <div class="top-on" >
            <div class="top-on1" style="margin-left: -37px; margin-top:-5px; font-size: 13px">
              Criar Projeto
            </div>
            <div class="clearfix"> </div>
          </div>
          <div class="clearfix"> </div>
        </div>    
        <% end %>
        <%= link_to projects_path, method: :get, style: "color:#000" do %>
        <div class="online-top elem_list" style=" margin-left: 12px; padding: 1px; padding-bottom: 2px; padding-top: 3px;">
          <div class="glyphicon glyphicon-search" style="font-size: 20px">
            
          </div>
          <div class="top-on" >
            <div class="top-on1" style="margin-left: -37px; margin-top:-5px">
              Buscar Projeto
            </div>
            <div class="clearfix"> </div>
          </div>
          <div class="clearfix"> </div>
        </div>   
        <% end %> 
      </div>
      <% end %>
    </div>


    <div class="col-md-6" style="margin-top: 20px">
      <%= bootstrap_flash %>
      <%=yield%>
    </div>




    <div class="col-md-3">
      <%if current_user %>
      <div class="search" style="margin-top: 20px">
        <form>
          <input type="text" value="Search" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}">
          <input type="submit" value="">
        </form>
      </div>
      <div class="online">
        <% current_user.friends.where(:status => "accept").each_with_index do |friend, index| %>
        <% index +=1 %>
        <%= link_to "#", class: "start-conversation",
        "data-sid" => current_user.id, "data-rip" => friend.friend_id do %>
        <div class="online-top">
          <div class="top-at">
            <%= image_tag(friend.friend.avatar, class: "img-responsive") %>
          </div>
          <div class="top-on">
            <div class="top-on1">
              <p><%= friend.friend.name %></p>
            </div>
            <label id="online_<%= friend.friend.id%>" class="round"> </label>
            <div class="clearfix"> </div>
          </div>
          <div class="clearfix"> </div>
        </div>
        <% end %>


        <% end %>
        <hr style="margin-top:5px; margin-bottom:5px;">
        <h5> Solicitacões </h5>
          <% Friend.where(user_id: current_user.id, status: 'pending').each do |friend| %>
          <div class="online-top">
              <div class="top-at">
                <%= image_tag(friend.friend.avatar, class: "img-responsive") %>
              </div>
              <div class="top-on">
                <div class="top-on1">
                  <p><%= friend.friend.name %></p>
                  <%= link_to accept_request_friends_path(friend: friend), data: { confirm: 'Are you sure?'}, class: "btn btn-success request_button" do %>
                  <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                  <% end %>   
                  <%= link_to refuse_request_friends_path(friend: friend), method: :delete, data: { confirm: 'Are you sure?'}, class: "request_button btn btn-default " do %>
                   <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                  <% end %>   

                </div>
                <div class="clearfix"> </div>
              </div>
              <div class="clearfix"></div>
            </div>

          <% end %>
      </div>
      <% end %>
    </div>

    <div class="row">
      <div class="col-lg-9">
        
        <script>

        function verificar_amigos(){
          <% if current_user %>
            <% current_user.friends.where(:status => "accept").each do |friend| %>
              <% if friend.friend.status == "Online" %>
                var target_id = "#online_"+<%=friend.friend.id%>;
                $(target_id).show();
              <% else %>
                var target_id = "#online_"+<%=friend.friend.id%>;
                $(target_id).hide();
              <% end %>
            <% end %>
          <% end %>
        }

        </script>
