                var target_id = "#online_"+<%=friend.friend.id%>;
                $(target_id).show();
              <% else %>
                var target_id = "#online_"+<%=friend.friend.id%>;
                $(target_id).hide();
              <% end %>
            <% end %>
          <% end %>


        </script>
        <br>
      </div>



      <div class="col-sm-3">
        <%= render 'shared/activities' %>
      </div><!--/span-->
    </div><!--/row-->

