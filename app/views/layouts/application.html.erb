        <% if current_user %>
          window.onbeforeunload = function (e)
          {
          $.ajax("<%= close_window_users_path %>");
          }

          <%= user_online %>

        <% end %>

        $("#sign_out_button").click(function(){
          $.ajax("<%= close_window_users_path %>");
        });

