  <div class="container">
    <!-- chat -->
    
    <div class="col-md-3">
      <% if current_user %>
      <div class="row" style="margin-left:10px">
      <%= image_tag(current_user.avatar, class: "avatarlist") %>
      <br>
      <h4><%= current_user.name %></h4>
    </div>
    <hr style="margin-top:5px;margin-bottom:5px;">
      PROJETOS
      <div class="online" style="margin-top: 0px;">
        <% current_user.projects.order(name: :asc).each do |project| %>
        <% if Member.where(project_id: project.id, user_id: current_user.id).first.situation == 1 %>
        <%= link_to project do %>
        <div class="online-top">
          <div class="">
            <%= image_tag(project.avatar, class: "projectlist") %>
          </div>
          <div class="top-on" >
            <div class="top-on1" style="margin-left: -15px;">
              <p><%= project.name %></p>
            </div>
            <div class="clearfix"> </div>
          </div>
          <div class="clearfix"> </div>
        </div>
        <% end %>
        <%end%>
        <% end %>     
        <% current_user.projects.order(name: :desc).each do |project| %>
        <% if Member.where(project_id: project.id, user_id: current_user.id).first.situation == 2 %>
        <%= link_to project do %>
        <div class="online-top">
          <div class="">
            <%= image_tag(project.avatar, class: "projectlist") %>
          </div>
          <div class="top-on" >
            <div class="top-on1" style="margin-left: -15px;">
              <p><%= project.name %></p>
            </div>
            <div class="clearfix"> </div>
          </div>
          <div class="clearfix"> </div>
        </div>
        <% end %>
        <%end%>
        <% end %>       
      </div>

      <%= button_to "Criar Projeto", new_project_path, class: "btn btn-default full", :method => :get%>
      <br>
      <%= button_to "Buscar Projetos", projects_path, class: "btn btn-default full", :method => :get %>

            
             
      <% end %>
    </div>


    <div class="col-md-6" style="margin-top: 20px">
      <%=yield%>


    </div>




    <div class="col-md-3">
      <%if current_user %>
      <div class="search" style="margin-top: 20px">
        <form>
          <input type="text" value="Search" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}">
          <input type="submit" value="">
        </form>
      </div>
      <div class="online">

        <% current_user.friends.where(:status => "accept").each_with_index do |friend, index| %>
        <% index +=1 %>
        <%= link_to "#", class: "start-conversation",
        "data-sid" => current_user.id, "data-rip" => friend.friend_id do %>
        <div class="online-top">
          <div class="top-at">
            <%= image_tag(friend.friend.avatar, class: "img-responsive") %>
          </div>
          <div class="top-on">
            <div class="top-on1">
              <p><%= friend.friend.name %></p>
            </div>
            <%  %>
            <label class="round"> </label>
            <%  %>
            <div class="clearfix"> </div>
          </div>
          <div class="clearfix"> </div>
        </div>
        <% end %>


        <% end %>
        <hr style="margin-top:5px; margin-bottom:5px;">
        <h5> Solicitac√µes </h5>
          <% Friend.where(user_id: current_user.id, status: 'pending').each do |friend| %>
          <div class="online-top">
              <div class="top-at">
                <%= image_tag(friend.friend.avatar, class: "img-responsive") %>
              </div>
              <div class="top-on">
                <div class="top-on1">
                  <p><%= friend.friend.name %></p>
                  <%= link_to 'Aceitar', accept_request_friends_path(friend: friend), data: { confirm: 'Are you sure?'} %>   
                  <%= link_to 'Recusar', refuse_request_friends_path(friend: friend), method: :delete, data: { confirm: 'Are you sure?'} %>
                </div>
                <div class="clearfix"> </div>
              </div>
              <div class="clearfix"></div>
            </div>

          <% end %>
      </div>
      <% end %>
    </div>

    <div class="row">
      <div class="col-lg-9">
        <%= bootstrap_flash %>

        <div id = "chatbox_parent"></div>
        <%= subscribe_to "/chatroom" %>
        <script>

        PrivatePub.subscribe("/chatroom", function(data, channel){
          var current_user_id = '#{current_user.try(:id)}';
          if (data.receiver_id == current_user_id){
            chatBox.chatWith(data.conversation_id);
          }
          else {
            chatBox.chatWith(data.conversation_id);
          }
        });

        </script>
        <br>
      </div>



      <div class="col-sm-3">
        <%= render 'shared/activities' %>
      </div><!--/span-->
    </div><!--/row-->

    <footer>
      <p>&copy; Company 2016</p>
    </footer>

  </div> <!-- /container -->
  <audio id="chatAudio"><source src="/sounds/notification.mp3" type="audio/mpeg"></audio>
</body>
