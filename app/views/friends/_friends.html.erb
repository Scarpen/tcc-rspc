<% if Friend.where(user_id: current_user.id, status: 'accept')%>
	<% Friend.where(user_id: current_user.id, status: 'accept').each do |friend| %>
		<br>
		<%= friend.user_id %>
		<br>
		<%= friend.friend_id %>
		<br>
		<%= friend.status %>
		<br>
		<%= link_to 'Desfazer Amizade', cancel_request_friends_path(friend: friend), method: :delete, data: { confirm: 'Are you sure?'} %>
		<br>
	<% end %>
<% else %>
	Sem amigos!
<% end %>